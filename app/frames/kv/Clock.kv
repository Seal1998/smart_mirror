#: import fs app.frames.utilities.FontSize

<ClockLabel@MonoLabel>
    font_size: fs.HUGE

<Clock>:

    AnchorLayout:

        id: clock0

        BoxLayout:

        BoxLayout:
            size_hint_x: .6

            ClockLabel:
                id: clock0hours

                text: "HH"
                font_size: self.height

            ClockLabel:
                id: clock0column1

                text: ":"
                font_size: self.height

            ClockLabel:
                id: clock0minutes

                text: "MM"
                font_size: self.height

            ClockLabel:
                id: clock0column2

                text: ":"
                font_size: self.height


            ClockLabel:
                id: clock0seconds

                text: "SS"
                font_size: self.height

        BoxLayout: