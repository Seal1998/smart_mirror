#: import h app.frames.utilities.scrH
#: import fs app.frames.utilities.FontSize

<Events>:
    orientation: 'vertical'

    AnchorLayout:
        position_x: 'left'
        position_y: 'center'
        size_hint: (None, None)
        padding: [self.parent.width / 2, 0, 0, 0]

        MonoLabel:
            font_size: fs.SMALL
            text: 'Upcoming events:'
            size_hint: (None, None)
            size: self.texture_size

    BoxLayout:
        orientation: 'vertical'


        Event:

        Event:

        Event:

        Event:

        Event:

        Event:




<Event>:
    StackLayout:
        minimum_width: self.parent.width - self.parent.width / 5
        x: self.parent.x + self.parent.width / 10
        orientation: 'lr-tb'
        MonoLabel:
            font_size: fs.SMALL
            #name: eventtime
            size_hint: (None, None)
            size: self.texture_size

            text: "XX:XX"

        MonoLabel:
            font_size: fs.SMALL
            #name: spacer
            size_hint: (None, None)
            size: self.texture_size

            text: "  "

        MonoLabel:
            font_size: fs.SMALL
            #name: event
            size_hint: (None, None)
            size: self.texture_size

            text: "Lorem ipsum dolor sit amet"

